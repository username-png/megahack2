
<div class="row">
    {{#each produtos}}
    <div class="col-md-3 p-2">
        <div class="card  shadow mb-2 rounded-top" style="margin:0 auto;border-radius: 16px">
            <div class="card-header  bg-dark text-white text-center  p-2">
                <h5 class="">{{categoria}}</h5>
            </div>
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-md">
                        <p class="card-text">Nome : {{nome_produto}}</p>
                        <p> Cor : Vemelha </p>
                        <p> Tamanho : GG </p>
                        <p> Valor : 25.00 </p>
                    </div>
                     <div class="col-md">
                         <img src="/img/{{image}}" width="100" height="75" alt="">
                    </div>
                </div>

            </div>

            <div class="card-footer bg-dark text-center">
                <div class="row">
                      <div class="col-md-12 p-1">
                        <!-- Button Modal -->
                        <button type="button" class="btn btn-sm btn-danger btn-block" data-toggle="modal"
                            data-target="#modalestoque{{id}}">
                            Em Estoque
                        </button>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="modalestoque{{id}}" tabindex="-1" role="dialog"
                    aria-labelledby="labelmodalestoque" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="labelmodalestoque">Em Estoque Temos</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Detalhes do Produto
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                <input type="hidden" name="id" value="{{_id}}">

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
    {{else}}

    <div class="mt-4 ml-4">
        <h5>Nenhum Produto Cadatrado no Sistema.</h5>
    </div>

    {{/each}}
</div>




